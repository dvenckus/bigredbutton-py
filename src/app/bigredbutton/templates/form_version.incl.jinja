<form action="/version-update" method="POST">
  <div class="control-group col-sm-4 float-left">
    <select id="merge-repo" name="merge-repo" class="form-control brb-merge brb-merge-repo">
      {% for key in repositories['list_order'] -%}
      {% set repo = repositories['list'][key] -%}
      <option value="{{ key }}"{% if repo['attributes'] is defined %}{{ repo['attributes'] }}{% endif %}>{{ repo['name'] }}</option>
      {% endfor -%}                  
    </select>
  </div>
  <div class="control-group col-sm-4 float-left">
    <div class="form-check">
      <input class="form-check-input" type="radio" name="versionIncrement" id="versionIncrementMajor" value="major">
      <label class="form-check-label" for="versionIncrementMajor">
        Increment Major (M+.mm.bbb)
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="versionIncrement" id="versionIncrementMinor" value="minor" checked>
      <label class="form-check-label" for="versionIncrementMinor">
        Increment Minor (M.mm+.bbb)
      </label>
    </div>
  </div>
  
  <div class="actions col-sm-4 float-left">
    <input id="btn-version-update" type="button" name="button"
           accept="" value="Update" class="button-primary medium-button gradient-blue"/>
    <a href="#" id="clearFormVersion" class="clearFormLink">Clear</a>
    <div class="form-check testmode">
      <input class="form-check-input" type="checkbox" name="versionTestMode" id="versionTest" value="test">
      <label class="form-check-label" for="versionTestMode">
        Test Mode (No Changes)
      </label>
    </div>
  </div>
</form>



